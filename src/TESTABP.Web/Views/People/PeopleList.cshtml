@model IEnumerable<TESTABP.Person>

@{
    ViewData["Title"] = "PeopleList";
}

<h2>PeopleList</h2>

<p>
    <a asp-action="PersonRegister">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationTime)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationTime)
            </td>
            <td>
                <a asp-action="GetPersonById" asp-route-id="@item.Id">Edit</a>|
                <a asp-action="DeletePersonById" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
